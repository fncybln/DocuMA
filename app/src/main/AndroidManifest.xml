<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DocuMA"
        tools:targetApi="31">
        <activity
            android:name=".activities.BatchModeActivity"
            android:exported="false"
            android:label="@string/title_activity_batch_mode"
            android:theme="@style/Theme.DocuMA" />
        <activity
            android:name=".activities.TelnetTestActivity"
            android:exported="false"
            android:label="@string/title_activity_telnet_test"
            android:theme="@style/Theme.DocuMA" />
        <activity
            android:name=".activities.UtilitiesActivities"
            android:exported="false"
            android:label="@string/title_activity_utilites_activities"
            android:theme="@style/Theme.DocuMA" />
        <activity
            android:name=".activities.ImportActivity"
            android:exported="false"
            android:label="@string/title_activity_test"
            android:theme="@style/Theme.DocuMA" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DocuMA">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddPresetActivity"
            android:exported="false"
            android:label="@string/title_activity_add_preset"
            android:theme="@style/Theme.DocuMA" />
        <activity
            android:name=".ImportActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EditPresetActivity"
            android:exported="false" />
    </application>

</manifest>